  <p id="notice"><%= notice %></p>
  <h1>Listing Products</h1>  
  <table>
    <tbody>
      <% @products.each do |product| %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
          <td><%= image_tag(product.image_url) %></td>
          <td class="list_description">
            <dl>
              <dt>
                <%= product.name %>
              </dt>
              <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
              <dd>Price: Â£<%= product.price %></dd>
              <dd>Date Available: <%= product.availability_date %></dd>
              <dd>Category: <%= product.category_id %></dd>
              <dd>Active?: <%= product.active %></dd>
            </dl>
          </td>
          <td class="list_actions">
            <%= link_to 'Show', product %>
            <%= link_to 'Edit', edit_product_path(product) %>
            <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path %>

